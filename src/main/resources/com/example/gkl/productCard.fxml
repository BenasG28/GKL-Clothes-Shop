<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="productCardRoot" prefHeight="200.0" prefWidth="326.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gkl.fxControllers.ProductCardController">

<VBox prefHeight="200.0" prefWidth="370.0" spacing="10">
<AnchorPane prefHeight="200.0" prefWidth="326.0">
    <children>
        <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="150.0" layoutX="14.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <Label fx:id="productNameLabel" layoutX="171.0" layoutY="25.0" text="Product Name" />
        <Label fx:id="productPriceLabel" layoutX="171.0" layoutY="54.0" text="Price: $" />
        <Button layoutX="171.0" layoutY="80.0" mnemonicParsing="false" onAction="#addToCart" text="Add to Cart" />
            <ComboBox fx:id="sizeComboBox" layoutX="287.0" layoutY="21.0" prefHeight="26.0" prefWidth="69.0" promptText="Size" />
            <Spinner fx:id="quantitySpinner" layoutX="277.0" layoutY="58.0" prefHeight="26.0" prefWidth="79.0" />
    </children>
</AnchorPane>
</VBox>
        </AnchorPane>
