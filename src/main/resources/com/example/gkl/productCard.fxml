<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="productCardRoot" prefHeight="200.0" prefWidth="326.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gkl.fxControllers.ProductCardController">

<VBox prefHeight="200.0" prefWidth="370.0" spacing="10">
<AnchorPane prefHeight="200.0" prefWidth="326.0">
    <children>
        <ImageView fx:id="productImageView" fitHeight="150.0" fitWidth="150.0" layoutX="14.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true">
        </ImageView>
        <Label fx:id="productNameLabel" layoutX="171.0" layoutY="25.0" text="Product Name" />
        <Label fx:id="productPriceLabel" layoutX="171.0" layoutY="54.0" text="Price: $" />
        <Button layoutX="171.0" layoutY="80.0" mnemonicParsing="false" text="Add to Cart" onAction="#addToCart" />
    </children>
</AnchorPane>
</VBox>
        </AnchorPane>
