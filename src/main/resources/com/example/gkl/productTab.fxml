    <children>
        <ListView fx:id="productListManager" layoutX="13.0" layoutY="14.0" onMouseClicked="#loadProductData" prefHeight="140.0" prefWidth="236.0" /> <!--onMouseClicked="#loadProductData"-->
        <TextField fx:id="productTitleField" layoutX="316.0" layoutY="50.0" prefHeight="26.0" prefWidth="276.0" promptText="Title" />
        <TextField fx:id="productDescriptionField" alignment="TOP_LEFT" layoutX="14.0" layoutY="171.0" prefHeight="111.0" prefWidth="234.0" promptText="Description" />
        <ComboBox fx:id="warehouseComboBox" layoutX="14.0" layoutY="320.0" prefHeight="25.0" prefWidth="234.0" />
        <ComboBox fx:id="productType" layoutX="315.0" layoutY="14.0" prefHeight="25.0" prefWidth="276.0" promptText="Product" />
        <Button fx:id="addNewProductButton" layoutX="315.0" layoutY="320.0" mnemonicParsing="false" onAction="#addNewProduct" text="Add" /> <!--onAction="#addNewProduct"-->
        <Button fx:id="updateProductButton" layoutX="379.0" layoutY="320.0" mnemonicParsing="false" text="Update" /> <!--onAction="#updateProduct"-->
        <Button fx:id="deleteProductButton" layoutX="459.0" layoutY="320.0" mnemonicParsing="false" onAction="#deleteProduct" text="Delete" />
