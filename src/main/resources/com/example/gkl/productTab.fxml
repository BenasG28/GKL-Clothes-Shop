        <TextField fx:id="productImageUrlField" layoutX="315.0" layoutY="123.0" prefHeight="26.0" prefWidth="276.0" promptText="Image URL " />
        <TextField fx:id="productColorField" layoutX="387.0" layoutY="85.0" prefHeight="26.0" prefWidth="61.0" promptText="Color" />
        <Label fx:id="sizeSLabel" layoutX="320.0" layoutY="178.0" prefHeight="17.0" prefWidth="46.0" text="Size S:" />
        <Spinner fx:id="quantitySpinner" layoutX="377.0" layoutY="174.0" prefHeight="26.0" prefWidth="119.0" />
      <Label fx:id="sizeMLabel" layoutX="320.0" layoutY="210.0" prefHeight="17.0" prefWidth="46.0" text="Size M:" />
      <Label fx:id="sizeLLabel" layoutX="320.0" layoutY="241.0" prefHeight="17.0" prefWidth="46.0" text="Size L:" />
      <Spinner fx:id="quantityMSpinner" layoutX="377.0" layoutY="206.0" prefHeight="26.0" prefWidth="119.0" />
      <Spinner fx:id="quantityLSpinner" layoutX="377.0" layoutY="237.0" prefHeight="26.0" prefWidth="119.0" />
      <Label fx:id="sizeXLLabel" layoutX="320.0" layoutY="274.0" prefHeight="17.0" prefWidth="46.0" text="Size XL:" />
      <Spinner fx:id="quantityXLSpinner" layoutX="377.0" layoutY="270.0" prefHeight="26.0" prefWidth="119.0" /> <!--onAction="#clearFields"-->
    </children>
